{
    "PolicyText": {
        "Version":"2012-10-17",
        "Statement":[
            {
                "Sid":"ReplicationAccessCrossAccount",
                "Effect":"Allow",
                "Principal":{
                    "AWS":"arn:aws:iam::{account id}:root"
                },
                "Action":[
                    "ecr:CreateRepository",
                    "ecr:ReplicateImage"
                ],
                "Resource": "arn:aws:ecr:us-west-2:123412341234:repository/*"
            }
        ]
    }
}
